#!/usr/bin/env node

/**
 * Module dependencies.
 */

var inquirer = require('inquirer');

// compose `dir`

var cwd = process.cwd();
var dir = process.argv[2]
  ? cwd + '/' + process.argv[2]
  : cwd;

/**
 * FAQ.
 */

var faq = [];

faq.push({
  type: 'input',
  name: 'name',
  message: 'Project name (keep it short): '
});

faq.push({
  type: 'input',
  name: 'description',
  message: 'Project description: '
});

faq.push({
  type: 'input',
  name: 'homepage',
  message: 'Project homepage: '
});

faq.push({
  type: 'input',
  name: 'author',
  message: 'Your name: '
});

faq.push({
  type: 'input',
  name: 'email',
  message: 'Your email: '
});

// prompt

console.log('Project setup:');
console.log();
inquirer.prompt(faq, parse);

/**
 * Parse cli `answers`.
 * @param  {Object}
 */

function parse(answers){
  console.log();
  console.log('Done.');
}
